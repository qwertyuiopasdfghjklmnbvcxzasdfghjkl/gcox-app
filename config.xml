<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.gcox" xmlns:android="http://schemas.android.com/apk/res/android" version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GCOX</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <!--<content src="http://10.0.5.84:8081/"/>-->
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <preference name="AppendUserAgent" value="InAppWebView" />
    <preference name="orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon density="ldpi" src="resources/android/icon/gcox.png"/>
        <icon density="mdpi" src="resources/android/icon/gcox.png"/>
        <icon density="hdpi" src="resources/android/icon/gcox.png"/>
        <icon density="xhdpi" src="resources/android/icon/gcox.png"/>
        <icon density="xxhdpi" src="resources/android/icon/gcox.png"/>
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true"/>
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <preference name="StatusBarStyle" value="lightcontent" />
    </platform>
</widget>
